<% if notice %>
  <p id="notice"><%= notice %></p>
<% end -%>
<h2>Your Cart</h2>
<ul class="cart">
  <%@cart.line_items.each do |item| %>
    <li><%= item.product.title %> <%= link_to 'Destroy', item, method: :delete, data: { confirm: 'Are you sure?' } %></li>
  <% end -%>
</ul>
<%= link_to 'Edit', edit_cart_path(@cart) %> |
<%= link_to 'Back', carts_path %>
